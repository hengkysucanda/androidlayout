<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/myActionBar</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="mytext" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">29sp</item>
    </style>

    <style name="myActionBar" parent="android:style/Widget.Holo.Light.ActionBar" >
        <item name="android:background">@color/red_color</item>
    </style>

    <style name="myButton" parent="android:Widget.Holo.Light.Button">
        <item name="android:background">@drawable/mybutton</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
